<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <TextView
         android:id="@+id/name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="20dp"
         android:layout_toRightOf="@+id/imgid"
         android:text="@string/samsung_galaxy_j2"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#000000"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/price"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/name"
         android:layout_alignBottom="@+id/imgid"
         android:layout_marginBottom="16dp"
         android:text="@string/rp_2_500_000"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#000000"
         />


    <ImageView
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:id="@+id/imgid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:padding="10dp"
        android:src="@drawable/samsungj2"
        />

    <ImageView
        android:id="@+id/spekid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/spekj2" />

</RelativeLayout>