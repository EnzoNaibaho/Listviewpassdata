<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileActivity">

    <ImageView
        android:layout_width="190dp"
        android:layout_height="275dp"
        android:id="@+id/imgid"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/samsungj2"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnnext"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/MobileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgid"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="Samsunggalaxy"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/MobilePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MobileName"
        android:layout_alignStart="@+id/MobileName"
        android:layout_below="@+id/MobileName"
        android:layout_marginTop="49dp"
        android:text="price"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/speklabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MobilePrice"
        android:layout_alignStart="@id/MobilePrice"
        android:text="Spefikasi"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/spekid"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_above="@id/btnnext"
        android:layout_below="@id/speklabel"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/spekj2" />

</RelativeLayout>